{
  "compilerOptions": {
    /* Output */
    "outDir": "./dist",
    "rootDir": "./",

    /* Language and Environment */
    "target": "ES2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Optional improvements */
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
